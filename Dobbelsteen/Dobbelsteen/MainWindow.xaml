<Window x:Class="Dobbelsteen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dobbelsteen"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid Background="#FFDA9696">
        <TextBox x:Name="resultTextBox" HorizontalAlignment="Left" Margin="28,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328" Height="209"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="384,174,0,0" VerticalAlignment="Top" Width="74" IsDefault="True" Foreground="#FF9E6161" FontWeight="Bold" Click="startButton_Click"/>
        <Button x:Name="clearButton" Content="Opnieuw" HorizontalAlignment="Left" Margin="384,199,0,0" VerticalAlignment="Top" Width="74" Foreground="#FF9E6161" FontWeight="Bold" Click="clearButton_Click"/>
        <Button x:Name="closeButton" Content="Sluiten" HorizontalAlignment="Left" Margin="384,224,0,0" VerticalAlignment="Top" Width="74" IsCancel="True" Foreground="#FF9E6161" FontWeight="Bold" Click="closeButton_Click"/>
    </Grid>
</Window>
